<query id="getPluginList" action="select">
	<tables>
		<table name="notification_plugins" />
	</tables>
	<columns>
		<column name="*" />
	</columns>
	<conditions>
		<condition operation="in" column="name" var="names" />
		<condition operation="equal" column="on_screen" var="on_screen" pipe="and" />
		<condition operation="equal" column="on_mobile" var="on_mobile" pipe="and" />
	</conditions>
	<navigation>
		<index var="sort_index" default="name" order="order_type" />
		<list_count var="list_count" default="20" />
		<page_count var="page_count" default="10" />
		<page var="page" default="1" />
	</navigation>
</query>
