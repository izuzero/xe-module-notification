<query id="getPlugin" action="select">
	<tables>
		<table name="notification_plugins" />
	</tables>
	<columns>
		<column name="*" />
	</columns>
	<conditions>
		<condition operation="equal" column="name" var="name" notnull="notnull" />
		<condition operation="equal" column="installed" var="installed" pipe="and" />
	</conditions>
</query>
